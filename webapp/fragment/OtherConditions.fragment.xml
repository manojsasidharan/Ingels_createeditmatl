<core:FragmentDefinition
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core" 
	xmlns:f="sap.ui.layout.form" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:t="sap.ui.table"
	xmlns="sap.m"
	class="sapUiSizeCompact">

<Dialog title="Other Conditions" class="sapUiSizeCompact">
	<content>
		<f:SimpleForm
			editable="true"
			layout="ResponsiveGridLayout"
			adjustLabelSpan="false"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label fieldGroupIds="lbl"  text="WH Moving Avg. Cost" wrapping="false">
					<layoutData>
						<l:GridData span="XL3 L3 M3 S3" />
					</layoutData>
				</Label>
				<Input value="{material>/purchasing/genData/whMovingAvgCost}" editable="false">
					<layoutData>
						<l:GridData span="XL2 L2 M2 S2" />
					</layoutData>
				</Input>
			</f:content>
		</f:SimpleForm>
		<t:Table width="772px"
				class="sapUiTinyMargin"
				rows="{OtherConditionsModel>/}"
				selectionMode="None"
				visibleRowCount="4"
				ariaLabelledBy="title">
				<t:columns>
					<t:Column width="200px">
						<Label text="Particulars"></Label>
						<t:template>
							<Text text="{OtherConditionsModel>Name}" wrapping="false" />
						</t:template>
					</t:Column>
					<t:Column resizable="false" width="150px">
						<Label text="Value"></Label>
						<t:template>
							<Input visible="{=(${OtherConditionsModel>Name}==='Total') ? false : true}" 
							editable="{= ${OtherConditionsModel>Editable} &amp;&amp; ${appControl>/editable}  &amp;&amp; ${OtherConditionsModel>ItemLevel}}"
							value="{OtherConditionsModel>Value}" type="Number" textAlign="Right"/>
						</t:template>
					</t:Column>
					<t:Column resizable="false" width="150px" >
						<Label text="From"></Label>
						<t:template>
							<DatePicker visible="{=(${OtherConditionsModel>Name}==='Total') ? false : true}"  
							editable="{= ${OtherConditionsModel>Editable} &amp;&amp; ${appControl>/editable}  &amp;&amp; ${OtherConditionsModel>ItemLevel}}"
							displayFormat="MM/dd/yyyy"/>
						</t:template>
					</t:Column>
					<t:Column resizable="false" width="150px" >
						<Label text="Till"></Label>
						<t:template>
							<DatePicker visible="{=(${OtherConditionsModel>Name}==='Total') ? false : true}"  
							editable="{= ${OtherConditionsModel>Editable} &amp;&amp; ${appControl>/editable}  &amp;&amp; ${OtherConditionsModel>ItemLevel}}"
							displayFormat="MM/dd/yyyy" />
						</t:template>
					</t:Column>
					<t:Column resizable="false" width="120px">
						<Label text="Item Level"></Label>
						<t:template>
							<CheckBox text="Item Level" visible="{=(${OtherConditionsModel>Name}!=='Total' &amp;&amp; ${OtherConditionsModel>itemRelevant} ? true : false)}" 
							editable="{= ${OtherConditionsModel>Editable} &amp;&amp; ${appControl>/editable} }" selected="{OtherConditionsModel>ItemLevel}" />
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>
	</content>
	<buttons>
		<Button type="Emphasized" width="100px" icon="sap-icon://accept" text="OK" press="onCloseVendorFunding"></Button>
		<Button width="100px" icon="sap-icon://cancel" text="Cancel" press="onCloseVendorFunding"></Button>
	</buttons>
</Dialog>

</core:FragmentDefinition>